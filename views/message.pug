  h1= title

  div 
    a(href='/') Home page
  
  
  div(class='container')
    div(class='row')
      div(class='col-4')
          div(class='jumbotron')
            h1(class='display-4') Send Messenger 
            br
            input(id='name' type="text" class='form-control' placeholder='name' value='client2')
            br
            textarea(id='message' class='form-control' placehoder='You message here' name="message", cols="30", rows="10") 
            br
            button(id='send' class='btn btn-success') Send 
      div(class='col-8')
        div(class='jumbotron')
          div(id="messages" class='messages')

